# ===========================
# HEGEMONIA - Environment Variables
# ===========================
# Copier ce fichier en .env et remplir les valeurs

# ===========================
# BASE DE DONNÉES
# ===========================

# PostgreSQL
POSTGRES_USER=hegemonia
POSTGRES_PASSWORD=CHANGEME_STRONG_PASSWORD_HERE
POSTGRES_DB=hegemonia_main

# Redis
# Pas de mot de passe par défaut (localhost only)

# ===========================
# WEB & API
# ===========================

# Next.js / NextAuth
NEXTAUTH_SECRET=CHANGEME_RANDOM_STRING_MIN_32_CHARS
NEXTAUTH_URL=https://hegemonia.com

# Database URLs
DATABASE_URL=postgresql://hegemonia:CHANGEME_STRONG_PASSWORD_HERE@postgres:5432/hegemonia_main
REDIS_URL=redis://redis:6379

# ===========================
# MINECRAFT
# ===========================

# Velocity forwarding secret (générer avec: openssl rand -base64 32)
VELOCITY_SECRET=CHANGEME_GENERATE_RANDOM_SECRET

# ===========================
# DISCORD
# ===========================

DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_GUILD_ID=

# Webhooks
DISCORD_WEBHOOK_WARS=
DISCORD_WEBHOOK_ECONOMY=
DISCORD_WEBHOOK_DIPLOMACY=
DISCORD_WEBHOOK_LOGS=

# ===========================
# SÉCURITÉ
# ===========================

# JWT Secret pour API
JWT_SECRET=CHANGEME_RANDOM_STRING_MIN_32_CHARS

# Rate limiting (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=10

# ===========================
# EMAIL (Optionnel)
# ===========================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@hegemonia.com

# ===========================
# PAIEMENTS (Optionnel)
# ===========================

STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===========================
# MONITORING
# ===========================

# Netdata
NETDATA_CLAIM_TOKEN=
NETDATA_CLAIM_ROOMS=

# ===========================
# BACKUPS
# ===========================

# AWS S3 (optionnel pour backup cloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=hegemonia-backups
AWS_REGION=eu-west-3

# ===========================
# DÉVELOPPEMENT
# ===========================

# Environment
NODE_ENV=production
DEBUG=false

# Ports (si différents des defaults)
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# WEB_PORT=3000
