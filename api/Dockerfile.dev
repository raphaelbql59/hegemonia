# Development Dockerfile - Optimized for hot reload and debugging
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npm run prisma:generate

# Copy source code
COPY . .

# Expose ports
EXPOSE 3000

# Start in development mode with hot reload
CMD ["npm", "run", "dev"]