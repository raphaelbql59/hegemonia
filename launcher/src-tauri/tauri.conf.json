{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Hegemonia Launcher",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "minecraft",
            "cmd": "java",
            "args": true
          }
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "exists": true,
        "scope": ["$HOME/.minecraft/**", "$APPDATA/.minecraft/**", "$HOME/.hegemonia/**"]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true,
        "confirm": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://**", "http://localhost:3001/**", "http://51.75.31.173:3001/**"]
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.hegemonia.launcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Game",
      "shortDescription": "Launcher professionnel pour Hegemonia",
      "longDescription": "Launcher professionnel ultra moderne pour le serveur Minecraft g√©opolitique Hegemonia",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Hegemonia Launcher",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "center": true,
        "decorations": false,
        "transparent": false
      }
    ]
  }
}
